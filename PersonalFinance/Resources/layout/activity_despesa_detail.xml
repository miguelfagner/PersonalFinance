<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:fitsSystemWindows="true"
    android:padding="16dp">

	<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

			<!-- Descrição -->
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="16sp"/>
			<TextView
                android:id="@+id/tvDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222222"
                android:paddingBottom="12dp" />

			<!-- Categoria -->
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="16sp"/>
			<TextView
                android:id="@+id/tvCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222222"
                android:paddingBottom="12dp" />

			<!-- Valor -->
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="16sp"/>
			<TextView
                android:id="@+id/tvValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#E53935"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

			<!-- Data de cadastro -->
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data de Cadastro"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="16sp"/>
			<TextView
                android:id="@+id/tvDataCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222222"
                android:paddingBottom="12dp" />

			<!-- Vencimento -->
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vencimento"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="16sp"/>
			<TextView
                android:id="@+id/tvVencimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222222"
                android:paddingBottom="12dp" />

			<!-- Número da Parcela -->
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número da Parcela"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="16sp"/>
			<TextView
                android:id="@+id/tvNParcela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222222"
                android:paddingBottom="12dp" />

			<!-- Receita Id -->
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receita Id"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="16sp"/>
			<TextView
                android:id="@+id/tvReceitaId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222222"
                android:paddingBottom="12dp" />
		</LinearLayout>
</ScrollView>
