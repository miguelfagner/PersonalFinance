<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<Button
        android:id="@+id/btnAdicionarReceita"
        android:text="Adicionar Receita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

	<Button
        android:id="@+id/btnAdicionarDespesa"
        android:text="Adicionar Despesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

	<Button
    android:id="@+id/btnListar"
    android:text="Ver Transações"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp" />


	<Button
        android:id="@+id/btnListarReceitas"
        android:text="Lista Receitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

	<Button
	    android:id="@+id/btnListarDespesas"
	    android:text="Lista Despesas"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp" />
</LinearLayout>